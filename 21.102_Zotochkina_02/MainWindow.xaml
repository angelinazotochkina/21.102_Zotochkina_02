<Window x:Class="_21._102_Zotochkina_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_21._102_Zotochkina_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="LoadData" AutoGenerateColumns="True"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,344,10,0">
            <TextBox x:Name="SearchTextBox" Width="200" Text="Введите фамилию преподавателя"/>
            <Button Content="Поиск" Click="SearchButton_Click" Margin="5"/>
            <ComboBox x:Name="SortComboBox" Width="150" Margin="5">
                <ComboBoxItem Content="Сортировка по имени преподавателя (убывание)"/>
                <ComboBoxItem Content="Сортировка по названию специальности (возрастание)"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>